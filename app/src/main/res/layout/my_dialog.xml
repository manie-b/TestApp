<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tjs_logo" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Using this application,You agree to the"
        android:textSize="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/link_terms"
            android:text="@string/linktermsandconditions"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium"/>



        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and"
            android:textSize="18sp"/>

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:id="@+id/link_privacypolicy"
            android:text="@string/linktositeprivacypolicy"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
        <Button
            android:id="@+id/btndecline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_background"
            android:text="Decline"
            android:textColor="@color/colorPrimary" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnaccept"
                android:layout_gravity="right"
                android:background="@drawable/button_background"
                android:text="Accept"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>



</LinearLayout>